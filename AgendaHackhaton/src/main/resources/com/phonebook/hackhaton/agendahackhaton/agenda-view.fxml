<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phonebook.hackhaton.agendahackhaton.controller.AgendaController">
    <top>
        <Label id="title-label" text="Agenda Telefónica" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
    <left>
        <VBox prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Gestión de Contactos" styleClass="header-label" />
            <TextField fx:id="nameField" promptText="Nombre" />
            <TextField fx:id="lastNameField" promptText="Apellido" />
            <TextField fx:id="phoneField" promptText="Teléfono (10 dígitos)" />

            <HBox spacing="5.0">
                <Button onAction="#handleAnadirContacto" text="Añadir" />
                <Button onAction="#handleModificarTelefono" text="Modificar" />
                <Button onAction="#handleLimpiarCampos" text="Limpiar" styleClass="clear-button" />
            </HBox>

            <Label text="Buscar / Eliminar" styleClass="header-label">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
            <HBox spacing="5.0">
                <Button onAction="#handleBuscarContacto" text="Buscar" />
                <Button onAction="#handleEliminarContacto" text="Eliminar" />
                <Button onAction="#handleExisteContacto" text="Existe?" />
            </HBox>

            <Label text="Estado de la Agenda" styleClass="header-label">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
            <HBox spacing="5.0">
                <Button onAction="#handleAgendaLlena" text="¿Llena?" />
                <Button onAction="#handleEspaciosLibres" text="Libres" />
            </HBox>

            <HBox spacing="5.0" style="-fx-padding-top: 5;">
                <TextField fx:id="spacesField" prefWidth="150.0" promptText="Nuevos espacios" />
                <Button onAction="#handleAumentarEspacios" text="Añadir" />
            </HBox>
            <Label fx:id="statusLabel" wrapText="true">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>
        </VBox>
    </left>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <TableView fx:id="contactTableView">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nombre" />
                    <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Apellido" />
                    <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Teléfono" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>